<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

  <ImageView
      android:id="@android:id/background"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:alpha="0.15"
      />

  <FrameLayout
      android:layout_width="750dp"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorPrimaryDark"
        android:layout_marginTop="150dp"
        android:alpha="0.90"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="200dp"
            android:layout_height="275dp"
            android:scaleType="centerCrop"
            android:padding="15dp"
            />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Display1"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:textColor="@android:color/white"
            android:padding="15dp"
            />
      </LinearLayout >

      <TextView
          style="@style/Base.TextAppearance.AppCompat.Caption"
          android:id="@+id/introduction"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:lineSpacingExtra="2dp"
          android:paddingBottom="8dp"
          />

      <TextView
          style="@style/Base.TextAppearance.AppCompat.Caption"
          android:id="@+id/bio"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:lineSpacingExtra="2dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              style="@style/Base.TextAppearance.AppCompat.Body1"
              android:id="@+id/sigil_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:padding="10dp"
              />

          <ImageView
              android:id="@+id/sigil"
              android:layout_width="250dp"
              android:layout_height="250dp"
              android:layout_gravity="center"

              />

        </LinearLayout >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingTop="30dp"
            >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="7dp"
              >

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/family1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                >

              <View
                  android:layout_width="1dp"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />

              <TextView
                  style="@style/Base.TextAppearance.AppCompat.Body1"
                  android:id="@+id/family1_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  />

              <TextView
                  style="@style/Base.TextAppearance.AppCompat.Caption"
                  android:id="@+id/family1_stuff"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:gravity="left"
                  />
            </LinearLayout >
          </LinearLayout >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="7dp"
              >

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/family2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                >

              <View
                  android:layout_width="1dp"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />

              <TextView
                  style="@style/Base.TextAppearance.AppCompat.Body1"
                  android:id="@+id/family2_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:gravity="left"
                  />

              <TextView
                  style="@style/Base.TextAppearance.AppCompat.Caption"
                  android:id="@+id/family2_stuff"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:gravity="left"
                  />
            </LinearLayout >
          </LinearLayout >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="7dp"
              >

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/family3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                >

              <View
                  android:layout_width="1dp"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />

              <TextView
                  style="@style/Base.TextAppearance.AppCompat.Body1"
                  android:id="@+id/family3_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:gravity="left"
                  />

              <TextView
                  style="@style/Base.TextAppearance.AppCompat.Caption"
                  android:id="@+id/family3_stuff"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:gravity="left"
                  />
            </LinearLayout >
          </LinearLayout >
        </LinearLayout >
      </LinearLayout >
    </LinearLayout >
  </FrameLayout >
</FrameLayout >